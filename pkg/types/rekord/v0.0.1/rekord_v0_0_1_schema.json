{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://rekor.dev/types/rekord/rekord_v0_0_1_schema.json",
    "title": "Rekor v0.0.1 Schema",
    "description": "Schema for Rekord object",
    "type": "object",
    "properties": {
        "signature": {
            "description": "Information about the detached signature associated with the entry",
            "type": "object",
            "properties": {
                "format": {
                    "$ref": "../rekord_schema.json#/definitions/rekord_format"
                },
                "url" :{
                    "$ref": "../rekord_schema.json#/definitions/rekord_url"
                },
                "content" :{
                    "$ref": "../rekord_schema.json#/definitions/rekord_content"
                },
                "publicKey" : {
                    "$ref": "../rekord_schema.json#/definitions/rekord_publicKey"
                }
            },
            "oneOf": [
                {
                    "required": [ "format", "publicKey", "url" ]
                },
                {
                    "required": [ "format", "publicKey", "content" ]
                }
            ]
        },
        "data": {
            "$ref": "../rekord_schema.json#/definitions/rekord_data"
        },
        "extraData": {
            "$ref": "../rekord_schema.json#/definitions/rekord_extraData"
        }
    },
    "required": [ "signature", "data" ]
}
